<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="OTPBoxStyle">
        <item name="android:background">@drawable/otp_box_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:maxLength">1</item>
        <item name="android:inputType">number</item>
        <item name="android:gravity">center</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:importantForAutofill">no</item>
    </style>

    <style name="TimeFilterChip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="chipBackgroundColor">@color/chip_background_color</item>
        <item name="chipStrokeColor">@color/purple_primary</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="SignalChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="chipBackgroundColor">#1A1A1A</item>
        <item name="chipStrokeColor">#424242</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="rippleColor">#333333</item>
        <item name="checkedIconVisible">false</item>
    </style>

    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/purple_primary</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/purple_primary</item>
        <item name="android:windowBackground">@color/black</item>
    </style>

    <style name="CircleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources> 